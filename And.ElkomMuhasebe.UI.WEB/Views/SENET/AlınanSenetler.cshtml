@model And.ElkomMuhasebe.UI.WEB.Controllers.SENETController.modelimiz
@{
    ViewBag.Title = "Alınan Senet Listesi";

    Layout = "~/Views/Shared/yeni.cshtml";
}

<div class="row pb-2">
    <div class="col">
        <a href="/CARI_HAREKET/CARIFIS/ÇıkışFiş" class="btn btn-sm btn-secondary mr-1 ">
            <span class="icon">
                <i class="fas fa-plus-circle"></i>
            </span>
            <span class="text">Yeni Senet için Cari Fişi</span>
        </a>
       

        <a class="btn btn-sm btn-primary btn-icon-split float-right collapsed" data-toggle="collapse" href="#collapseFiltre" role="button" aria-expanded="false" aria-controls="collapseCariHareketFiltre">
            <span class="icon">
                <i class="fas fa-filter"></i>
            </span>
            <span class="text">Filtre</span>
        </a>
    </div>
</div>

<div class="row">
    <div class="col mb-2">
        <div class="collapse" id="collapseFiltre" style="">            
            <div class="card card-body">
                <div class="row pb-2">
                    <div class="col-6 mb-2">
                        <div class="input-group input-group-sm">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Vade</span>
                            </div>
                            <input type="date" id="vadeilktarih" value="@DateTime.Now.Year.ToString("D" + 4)-01-01" class="form-control">
                            <input type="date" id="vadesontarih" value="@DateTime.Now.Year.ToString("D" + 4)-12-30" class="form-control">
                        </div>
                    </div>

                    <div class="col-6 mb-2">
                        <div class="input-group input-group-sm">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Tutar:</span>
                            </div>
                            <input type="number" id="bbsa" aria-label="First name" class="form-control" value="0">
                            <div class="input-group-prepend">
                                <span class="input-group-text">den Büyük</span>
                            </div>
                            <input type="number" id="bksa" aria-label="Last name" class="form-control" value="0">
                            <div class="input-group-prepend">
                                <span class="input-group-text">den Küçük</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 mb-2">
                        <div class="input-group input-group-sm">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Çek Durumu</span>
                            </div>
                            <select id="durum" class="form-control form-control-sm">

                                <option value="-1">Hepsi</option>
                                <option value="0">Pörtföy</option>
                                <option value="1">Ciro</option>
                                <option value="2">TahsilEdildi</option>

                                <option value="4">Karşılıksız</option>
                                <option value="5">İadeEdilenler</option>
                                <option value="3">BankayaTahsilVerildi</option>
                                <option value="6">BankadanTahsilEdildi</option>
                                <option value="7">BankadanPortfoy</option>
                            </select>
                        </div>
                    </div>
                </div>
                <button class="btn btn-sm btn-primary" onclick="tabloyenile()">Filtreyi Uygula</button>
            </div>
        </div>
    </div>
</div>
 
<div class="card">
   <div class="table-responsive">            
        <div class="col-sm-12">
            <table id="bootstrap-table" class="table-bordered table-sm" data-show-search-clear-button="true"
                    data-show-footer="true" data-footer-style="footerStyle" data-show-print="true"
                    data-single-select="true" data-show-refresh="true" data-icon-size="sm"
                    data-side-pagination="server"
                    data-pagination="true"
                    data-page-size="10"
                    data-page-list="[10, 20, 50, 100, 200, 300]" data-show-export="true" data-reorderable-columns="true">
                <thead>
                    <tr>
                        <th data-field="actions" data-print-ignore="true" class="td-actions text-right no-print" data-events="operateEvents" data-formatter="operateFormatter">İşlemler</th>
                        <th data-field="state" class="no-print" data-print-ignore="true" data-checkbox="true"></th>
                        <th data-field="ID" data-print-ignore="true" class="text-center" data-sortable="true" data-footer-formatter="idFormatter" data-visible="false">ID</th>
                        <th data-field="TARIH" data-sortable="true">Tarih</th>
                        <th data-field="PORTFOYNO" data-sortable="true">Portfoy No</th>

                        <th data-field="SENETDURUMU" data-sortable="true">Senet Durumu</th>

                        <th data-field="VADE" data-sortable="true">Vade<a class="no-print" style="color:transparent;">-----------------------------------------</a></th>
                        <th data-field="ALINANKISIADI" data-sortable="true">Alınan Kişi Adı<a class="no-print" style="color:transparent;">-----------------------------------------</a></th>
                        <th data-field="ALINANKISIKODU" data-sortable="true">Alınan Kişi Kodu</th>
                        <th data-field="ACIKLAMA" data-sortable="true">Açıklama<a class="no-print" style="color:transparent;">-----------------------------------------</a></th>
                        <th data-field="TUTAR" data-align="right" data-footer-formatter="priceFormatter" data-sortable="true" data-formatter="numberformatter">Tutar</th>
                        <th data-field="VERILENKISIADI" data-sortable="true">Ciro Edilen Kişi Adı<a class="no-print" style="color:transparent;">-----------------------------------------</a></th>
                        <th data-field="VERILENKISIKODU" data-sortable="true">Ciro Edilen Kişi Kodu</th>
                        <th data-field="VERILENBANKADI" data-sortable="true">Verilen Banka Adı<a class="no-print" style="color:transparent;">-----------------------------------------</a></th>
                        <th data-field="VERILENBANKAKODU" data-sortable="true">Verilen Banka Kodu</th>
                        <th data-field="CEKKESIDEYERI" data-sortable="true">Senet Keside Yeri<a class="no-print" style="color:transparent;">-----------------------------------------</a></th>
                        <th data-field="KESIDETARIHI" data-sortable="true">Senet Keside Tarihi</th>

                        <th data-field="SORUMLULUK_MERKEZI" data-sortable="true">S Merkezi</th>

                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>  
        <!-- /.card-body -->
        </div>
    <!-- /.card -->
    </div>
</div>


@section script{
    <script type="text/javascript">


            function pad(d) {
                return (d < 10) ? '0' + d.toString() : d.toString();
            }
            Date.prototype.formatMM = function () {
                return (pad(this.getDate()) + "/" + pad(this.getMonth() + 1) +

                    "/" + this.getFullYear());
            }

            function numberformatter(value, row, index) {
                if (!value)
                    return "0.00";
                else {
                    return [

                        numberWithCommas((Number(value.toString().replace(",", "."))).toFixed(2))
                    ].join('');
                }
            }
            function numberWithCommas(x) {
                return x.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
            }

            function priceFormatter(data) {
                var field = this.field

                var toplam = data.map(function (row) {
                    if (row[field])
                        return +Number(row[field].toString().replace(",", "."))
                    else {
                        return +Number("0")
                    }
                }).reduce(function (sum, i) {
                    return sum + i
                }, 0);
                return numberformatter(toplam) + " TL"
            }
            function get_query_params(p) {
                var date = new Date($('#ilktarih').val());
                var dateson = new Date($('#sontarih').val());
                var vadedate = new Date($('#vadeilktarih').val());
                var vadedateson = new Date($('#vadesontarih').val());

                var arr = [{ verismi: "VADE", deger: vadedate.formatMMDDYYYY(), deger2: vadedateson.formatMMDDYYYY(), filtretipi: 4 }];
                arr.push({ verismi: "hareket.TUTAR", deger: document.getElementById("bbsa").value, deger2: document.getElementById("bksa").value, filtretipi: 3 });
                if (document.getElementById("durum").options[document.getElementById("durum").selectedIndex].value != -1) {
                    arr.push({ verismi: "hareket.SENETDURUMU", deger: document.getElementById("durum").options[document.getElementById("durum").selectedIndex].value, deger2: "", filtretipi: 2 });
                }


                if (p.sort != null) {
                    return {

                        extraParam: 'abc',
                        search: p.search,
                        sort: p.sort,
                        order: p.order,
                        limit: p.limit,
                        offset: p.offset,

                        sort: p.sort,

                        filterler: arr
                    }
                } else {
                    return {
                        extraParam: 'abc',
                        search: p.search,
                        sort: p.sort,
                        order: p.order,
                        limit: p.limit,
                        offset: p.offset,

                        sort: "ID",

                        filterler: arr
                    }

                }
            }


            var $table = $('#bootstrap-table');


            function operateFormatter(value, row, index) {
                return [
                    '<div class="d-flex justify-content-start">',
                    '<a rel="tooltip" title="Hareketleri" class="btn btn-link btn-sm table-action view" href="javascript:void(0)"><i class="fa fa-eye text-warning"></i></a>',
                   
                ].join('');
            }

            $().ready(function () {
                window.operateEvents = {
                    'click .view': function (e, value, row, index) {
                        info = JSON.stringify(row);

                        historysend("/SENET/SenetHareketleri/" + row.ID);


                        //    swal('You click view icon, row: ', info);
                        
                    },
                  

                };

                $table.bootstrapTable({

                    type: "POST",
                    url: "/SENET/ALINANFISDATA",
                    method: 'post',
                    contentType: 'application/x-www-form-urlencoded',
                    queryParams: get_query_params,
                    toolbar: ".toolbar",
                    clickToSelect: true,
                    showRefresh: true,
                        printPageBuilder: function (table) {
        return `
<html>
  <head>
  <style type="text/css" media="print">
  page {
    size: auto;
    margin: 25px 0 25px 0;
  }
  </style>
  <style type="text/css" media="all">
    @@media print
{
    .no-print, .no-print *
    {
        display: none !important;
    }
}
  table {
    border-collapse: collapse;
    font-size: 12px;
  }
  table, th, td {
    border: 1px solid grey;
  }
  th, td {
    text-align: center;
    vertical-align: middle;
  }
  p {
    font-weight: bold;
    margin-left:20px;
  }
  table {
    width:94%;
    margin-left:3%;
    margin-right:3%;
  }
  div.bs-table-print {
    text-align:center;
  }
    h1.bs-table-print {
    text-align:center;
  }
 </style>
      <title>@Session["FirmaAdı"]</title>
     </head>
  <body>
     <h1 class="bs-table-print">Alınan Senetler Listesi</h1>

  <div class="bs-table-print">  <table class="table-bordered table-sm"><thead>` + $table.children('thead').html() + '</thead><tbody>' + $table.children('tbody').html()+ "<tbody></table></div></body></html></div>"

      },
                    search: true,
                    showToggle: true,
                    showColumns: true,
                    locale: 'tr-TR',
                    searchAlign: 'left',
                    formatShowingRows: function (pageFrom, pageTo, totalRows) {
                        return "Toplam " + totalRows+" Kayıt";
                    },
                    formatRecordsPerPage: function (pageNumber) {
                        return pageNumber + " Adet Listeleniyor";
                    },

                });

             
                $table.on('  dbl-click-row.bs.table', function (e, row, $element) {

                    historysend("/SENET/SenetHareketleri/" + row.ID);

                });

                //activate the tooltips after the data table is initialized
                $('[rel="tooltip"]').tooltip();

                $(window).resize(function () {
                    $table.bootstrapTable('resetView');
                });


            })

            function idFormatter() {
                return 'Toplam'
            }

            function nameFormatter(data) {
                return data.length
            }


            function footerStyle(column) {
                return {
                    id: {
                        classes: 'uppercase'
                    },
                    name: {
                        css: { 'font-weight': 'normal' }
                    },
                    price: {
                        css: { color: 'red' }
                    }
                }[column.field]
            }


    </script>
}
