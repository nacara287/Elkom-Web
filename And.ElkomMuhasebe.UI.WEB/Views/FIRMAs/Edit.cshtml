                                                }
                                            }}
                                    </select>
                                    <div class="input-group-append">
                                        <button class="btn btn-sm btn-outline-secondary" type="button" data-toggle="modal" data-target="#ModalEARSIVSERINO"><i class="fas fa-plus"></i></button>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group ">
                                <label>GIB BK </label>
                                @Html.EditorFor(model => model.GIBBK, new { htmlAttributes = new { @class = "form-control form-control-sm", @placeholder = "...", @aria_label = "...", @aria_describedby = "button-addon2" } })
                                @Html.ValidationMessageFor(model => model.GIBBK, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group ">
                                <label>Demo Portal:</label>
                                @Html.EditorFor(model => model.DemoPortal, new { htmlAttributes = new { @class = "form-control form-control-sm", @aria_label = "Cari Kodu", @aria_describedby = "button-addon2" } })
                                @Html.ValidationMessageFor(model => model.DemoPortal, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label>Entegrator</label>
                                <select class="form-control" id="ENTAGRATOR" name="ENTAGRATOR">
                                    @if (Model.ENTAGRATOR != null)
                                    {
                                        <option selected value=@((int)(Model.ENTAGRATOR))>@Model.ENTAGRATOR.ToString()</option>
                                    }
                                    else
                                    {
                                        <option selected value="EDM">EDM</option>
                                    }

                                    <option value="HizliBilisim">HizliBilisim</option>
                                </select>
                                @Html.ValidationMessageFor(model => model.ENTAGRATOR, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label>E-Fatura xslt </label>
                                @if (!string.IsNullOrEmpty(Model.XSLKODUFATURA))
                                {
                                    <a>Yüklü xslt:@Model.XSLKODUFATURA.Substring(Model.XSLKODUFATURA.Length - 30) </a>}
                                <input type="file" name="FaturaXslt" id="FaturaXslt" onchange="fileCheck(this);" />
                            </div>

                            <div class="form-group">
                                <label>E-Arşiv xslt </label>
                                @if (!string.IsNullOrEmpty(Model.XSLKODUEARSIV))
                                {
                                    <a>Yüklü xslt:@Model.XSLKODUEARSIV.Substring(Model.XSLKODUFATURA.Length - 30) </a>}
                                <input type="file" name="ArsivXslt" id="ArsivXslt" onchange="fileCheck(this);" />
                            </div>
                            <div class="form-group">
                                <label>Firma Logo </label>
                                @if (!string.IsNullOrEmpty(Model.FirmaResimUrl))
                                {
                            <a>Yüklü Logo:@Model.FirmaResimUrl.Substring(Model.FirmaResimUrl.Length - 30) </a>}
                                <input type="file" name="FirmaResim" id="FirmaResim" onchange="fileCheck(this);" />
