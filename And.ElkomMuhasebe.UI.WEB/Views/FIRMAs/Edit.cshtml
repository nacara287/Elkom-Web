                                @Html.ValidationMessageFor(model => model.EFATSİFRE, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group ">
                                <label for="EFATSERINO">Efatura Seri No</label>
                                <div class="input-group input-group-sm">
                                    <select class="custom-select" id="EFATSERINO" name="EFATSERINO">
                                        <option selected>@Model.EFATSERINO</option>
                                        @{

                                            if (efaturseriliste != null)
                                            {
                                                foreach (var item in efaturseriliste)
                                                {

                                                    <option>@item.SERI_NO</option>

                                                }
                                            }}
                                    </select>
                                    <div class="input-group-append">
                                        <button class="btn btn-sm btn-outline-secondary" type="button" data-toggle="modal" data-target="#ModalEFATSERINO"><i class="fas fa-plus"></i></button>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group ">
                                <label for="EFATSERINO">EArşiv Seri No</label>
                                <div class="input-group input-group-sm">
                                    <select class="custom-select" id="EARSIVSERINO" name="EARSIVSERINO">
                                        <option selected>@Model.EARSIVSERINO</option>
                                        @{

                                            if (earsivseriliste != null)
                                            {
                                                foreach (var item in earsivseriliste)
                                                {

