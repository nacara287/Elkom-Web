@section script{

    <script type="text/javascript" charset="utf-8">

        function özelkodolustur1() {
            $.ajax({
                type: "POST",

                dataType: "json",
                contentType: "application/json; charset=utf-8",
                url: "/FIRMAS/efaturaserinolustur/",
                data: JSON.stringify({
                    serino: document.getElementById("efatserino").value,

                }),
                success: function (result) {
                    alert("Serin No Oluşturuldu!")
                    var opt = document.createElement('option');


                    opt.appendChild(document.createTextNode(document.getElementById("efatserino").value));


                    opt.selected = true;
                    var sel = document.getElementById('EFATSERINO');

                    sel.appendChild(opt);
                }
                ,
                error: function (result) {
                    alert('Başarısız');
                }
            });
        }

        function özelkodolustur2() {
            $.ajax({
                type: "POST",

                dataType: "json",
                contentType: "application/json; charset=utf-8",
                url: "/FIRMAS/earsivserinolustur/",
                data: JSON.stringify({
                    serino: document.getElementById("earsivserino").value,

                }),
                success: function (result) {
                    alert("Serin No Oluşturuldu!")
                    var opt = document.createElement('option');


                    opt.appendChild(document.createTextNode(document.getElementById("earsivserino").value));


                    opt.selected = true;
                    var sel = document.getElementById('EARSIVSERINO');

                    sel.appendChild(opt);
                }
                ,
                error: function (result) {
                    alert('Başarısız');
                }
            });
        }
        function datagonder() {
            var form = $('#postform');

            $.ajax({
                type: "POST",
                url: form.attr('action'),
                data: form.serialize()
                ,
                success: function (result) {
                    historysend("/Firmas/Edit");

                },
                error: function (result) {
                    toastr["error"]('Lütfen Bilgileri Eksik  Ya da Yanlış Girmeyiniz');
                }
            });

        };

    </script>


    <!-- Page specific script -->
