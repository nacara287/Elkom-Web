@model And.ElkomMuhasebe.Core.Model.Entity.FirmaDB.KUR_BASLIK

@{
    ViewBag.Title = "Kur Düzenle";
    Layout = "~/Views/Shared/yeni.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-xl-6 col-lg-6">
        <!-- START card -->
        <div class="card">
            <div class="card-header ">
                <div class="card-title">
                   Kur Bilgileri
                </div>
            </div>
            <div class="card-body">
                <div class="form-group-attached">
                    <div class="row clearfix">

                        <div class="form-group form-group-default input-group required">
                            <div class="form-input-group ">
                                <label>Kur Adı</label>
                                @Html.EditorFor(model => model.KURADI, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.KURADI, "", new { @class = "text-danger" })


                            </div>

                        </div>


                    </div>

                    <div class="row clearfix">
                        <div class="form-group form-group-default input-group required">
                            <div class="form-input-group ">
                                <label>Kur Kodu</label>
                                @Html.EditorFor(model => model.KURKODU, new { htmlAttributes = new { @class = "form-control", @readonly="true"} })
                                @Html.ValidationMessageFor(model => model.KURKODU, "", new { @class = "text-danger" })


                            </div>

                        </div>


                    </div>

                </div>

                <div class="form-group-attached">
                    <div class="row clearfix">
                        
                            <div class="form-group form-group-default form-group-default required">
                                <label>Kur</label>
                                @Html.EditorFor(model => model.KUR, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.KUR, "", new { @class = "text-danger" })
                            </div>
                    
                        
                    </div>



                </div>
           
                <div class="form-group-attached">
                    <div class="row clearfix">

                        <div class="form-group form-group-default form-check-group d-flex align-items-center">
                            @if (Model.Aktif == true)
                            {
                                <div class="form-check switch switch-lg success full-width right m-b-0">
                                    <input type="checkbox" value="true" id="Actıve" name="Actıve" checked>
                                    <label for="Actıve">Aktif</label>
                                </div>}
                            else
                            { <div class="form-check switch switch-lg success full-width right m-b-0">
                                    <input type="checkbox" value="true" id="Actıve" name="Actıve">
                                    <label for="Actıve">Aktif</label>
                                </div>

                            }

                        </div>


                    </div>



                </div>

            </div>
        </div>
        <!-- END card -->
    </div>
  
    <div id="butonlar" class="fixed-bottom py-1 text-center">
        <button type="submit"  class="btn btn-sm btn-primary btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-save"></i>
            </span>
            <span class="text">Kaydet</span>

        </button>
        <a href="/KUR_BASLIK/Edit" class="btn btn-sm btn-secondary btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-power-off"></i>
            </span>
            <span class="text">İptal</span>
        </a>


    </div>
}

