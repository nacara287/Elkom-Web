            if (document.getElementById("türadisyon").checked == true)
                arr.push({ verismi: "hareket.ISLEMTURU", deger: document.getElementById("türadisyon").value, deger2: "", filtretipi: 2 });
            if (document.getElementById("türsarf").checked == true)
                arr.push({ verismi: "hareket.ISLEMTURU", deger: document.getElementById("türsarf").value, deger2: "", filtretipi: 2 });
            arr.push({ verismi: "hareket.ISLEMTURU", deger: document.getElementById("türefatura").value, deger2: "", filtretipi: 2 });
            if (document.getElementById("türearsiv").checked == true)
