            kasaid = kasadg;
            document.getElementById("Stok").dataset.hiddenvalue = kasakodu;
            document.getElementById("Stok").value = kasaadı;

            document.getElementById("ModalStokSec").style.display = "none";
            document.getElementById("Açıklama").focus();


        }

