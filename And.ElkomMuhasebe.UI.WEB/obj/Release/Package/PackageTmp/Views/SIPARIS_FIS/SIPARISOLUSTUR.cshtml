                    sort: p.sort,
                    order: p.order,
                    limit: p.limit,
                    offset: p.offset,

                    sort: "ID",

                    carid: carid,

                     TIPI:  @if (Url.RequestContext.HttpContext.Request.Url.ToString().Contains("GirişFiş")) { @:0
                }else
                    {@:1

                    },



                    filterler: arr
                }

            }
        }
